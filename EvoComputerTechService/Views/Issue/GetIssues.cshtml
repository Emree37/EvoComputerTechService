@model List<Issue>

<section class="software_service_area sec_pad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3">
                <ul class="nav nav-tabs software_service_tab" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link" id="de-tab" data-toggle="tab" href="#de" role="tab" aria-controls="de"
                           aria-selected="false">BEKLEMEDE</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="saas-tab" data-toggle="tab" href="#saas" role="tab"
                           aria-controls="saas" aria-selected="false">KUYRUKTA</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active show" id="ma-tab" data-toggle="tab" href="#ma" role="tab"
                           aria-controls="ma" aria-selected="true">İŞLEMDE</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="secure-tab" data-toggle="tab" href="#secure" role="tab"
