                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="scale-tab" data-toggle="tab" href="#scale" role="tab"
                           aria-controls="scale" aria-selected="true">ÖDENENLER</a>
                    </li>
                </ul>
            </div>
            <div class="col-lg-9 col-md-9">
                <div class="tab-content software_service_tab_content">
                    <div class="tab-pane fade" id="de" role="tabpanel" aria-labelledby="de-tab">
                        <div class="row">
                            <section class="shop_list_area sec_pad">
                                <div class="container">
                                    @foreach (var item in Model)
                                    {
                                        @if (item.IssueState == IssueStates.Beklemede)
                                        {
                                            <div class="row shop_list_item">
                                                <div class="col-md-5">
                                                    <div class="shop_list_img">
                                                        <img class="img-fluid" src="@item.IssuePicture.ToString().Substring(7)" alt="">
                                                    </div>
                                                </div>
                                                <div class="col-md-7 single_product_item mt-0">
                                                    <div class="single_pr_details text-left">
                                                        <a class="s_list_title" asp-controller="Issue" asp-action="UpdateIssue" asp-route-id="@item.Id">
                                                            <h3 class="f_p f_500 f_size_22">@item.IssueName</h3>
                                                        </a>
                                                        <div class="ratting">
                                                            <a href="#">@item.IssueState</a>
                                                        </div>
                                                        <div class="price">
                                                            <ins>
                                                                <span class="woocommerce-Price-amount amount">
                                                                    <span class="woocommerce-Price-currencySymbol"></span>@item.CreatedDate
                                                                </span>
                                                            </ins>
                                                        </div>

                                                        <p class="f_p f_400 f_size_15 mt_30 mb_50">
                                                            @item.Description
                                                        </p>
                                                        <div class="pr_button">

                                                            @if (item.IssueState != IssueStates.Tamamlandi)
                                                            {
                                                                <button class="btn btn-danger">
                                                                    <a asp-controller="Issue" asp-action="DeleteIssue" asp-route-id="@item.Id">
                                                                        SİL
                                                                    </a>
                                                                </button>
                                                            }
                                                            @if (item.IssueState == IssueStates.Tamamlandi)
                                                            {
                                                                <button class="btn btn-danger">
                                                                    <a asp-controller="Payment" asp-action="Purchase" asp-route-id="@item.Id">
                                                                        ÖDE
                                                                    </a>
                                                                </button>
                                                            }
                                                            @*<a href="#"><i class="ti-heart"></i></a>
                                                                <a href="#"><i class="ti-eye"></i></a>*@
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                    }

                                </div>
                            </section>
                        </div>
                    </div>
