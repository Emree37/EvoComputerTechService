@model LoginViewModel
@{ ViewBag.Title = "Login"; }

<section class="sign_in_area bg_color sec_pad">
    <div class="container">
        <div class="sign_info">
            <div class="row">
                <div class="col-lg-5">
                    <div class="sign_info_content">
                        <h3 class="f_p f_600 f_size_24 t_color3 mb_40">First time here?</h3>
                        <h2 class="f_p f_400 f_size_30 mb-30">
                            Join now and get<br> <span class="f_700">
                                20%
                                OFF
                            </span> for all <br> products
                        </h2>
                        <ul class="list-unstyled mb-0">
                            <li><i class="ti-check"></i> Premium Access to all Products</li>
                            <li><i class="ti-check"></i> Free Testing Tools</li>
                            <li><i class="ti-check"></i> Unlimited User Accounts</li>
                        </ul>
                        <button type="submit" class="btn_three sign_btn_transparent" asp-controller="Account" asp-action="Register">Sign Up</button>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="login_info">
                        <h2 class="f_p f_600 f_size_24 t_color3 mb_40">GİRİŞ YAP</h2>
                        <form class="login-form sign-in-form" asp-controller="Account" asp-action="Login">
                            <div class="form-group text_box">
                                <label asp-for="UserName"></label>
                                <input asp-for="UserName" placeholder="Username"/>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group text_box">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" placeholder="Password"/>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="extra mb_20">
                                <div class="checkbox remember">
                                    <label asp-for="RememberMe"></label>
                                    <input asp-for="RememberMe" />
                                </div>
                                <!--//check-box-->
                                <div class="forgotten-password">
                                    <a asp-controller="Account" asp-action="ResetPassword">Şifreni Mi Unuttun?</a>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <button type="submit" class="btn_three">Giriş Yap</button>
                                @*<div class="social_text d-flex ">
                                    <div class="lead-text">Don't have an account?</div>
                                    <ul class="list-unstyled social_tag mb-0">
                                        <li><a href="#"><i class="ti-facebook"></i></a></li>
                                        <li><a href="#"><i class="ti-twitter-alt"></i></a></li>
                                        <li><a href="#"><i class="ti-google"></i></a></li>
                                    </ul>
                                </div>*@
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>