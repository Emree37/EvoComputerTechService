<form asp-area="Admin" asp-controller="Operator" asp-action="AssignTechnician" method="post">
    <div class="form-group">
        <label>DropdownList Multiple Select</label>
        <label id="employees">
            <span style="padding-right: 10px">Hepsini Seç / Temizle </span>
            <input type="checkbox" id="hepsiniSec"><i></i>
        </label>
        <select name="Technician[]"
                id="select2"
                multiple="multiple"
                class="form-control"
                asp-items="ViewBag.Technicians"></select>
    </div>
    <div class="form-group">
        <button class="btn btn-primary">Ata</button>
    </div>
</form>


